<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant30"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:background="@color/gray"
        android:cursorVisible="false"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:paddingBottom="1pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="60sp"
        tools:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="155pt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buClean"
                android:text="AC"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buSign"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buPercent"
                android:text="%"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOpEvent"
                android:text="รท" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOpEvent"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOpEvent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonwhite"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/buAdd"
                android:layout_width="38.75pt"
                android:layout_height="38.75pt"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="buOpEvent"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="77.5pt"
            android:layout_height="38.75pt"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonwhite"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buDeci"
            android:layout_width="38.75pt"
            android:layout_height="38.75pt"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonwhite"
            android:onClick="buNumberEvent"
            android:text="."
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buEquals"
            android:layout_width="38.75pt"
            android:layout_height="38.75pt"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:onClick="buEqualEvent"
            android:text="=" />
    </LinearLayout>

</LinearLayout>